<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/setting_title_relative"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/actionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:fontFamily="@font/nanum_eb"
            android:textColor="@color/titleText"
            android:text="설정" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background ="@color/basicLine"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/setting_location_constraint"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/setting_title_relative">

        <ImageView
            android:id="@+id/setting_location_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_location"
            android:layout_alignParentBottom="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting_location_tv"/>

        <TextView
            android:id="@+id/setting_location_tv"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:text="지역 설정"
            android:textSize="15sp"
            android:fontFamily="@font/nanum_b"
            android:textColor="@color/titleText"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background ="@color/basicLine"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/setting_tempError_constraint"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/setting_location_constraint">

        <ImageView
            android:id="@+id/setting_tempError_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_temper"
            android:layout_alignParentBottom="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting_tempError_tv"/>

        <TextView
            android:id="@+id/setting_tempError_tv"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:text="온도 오차 설정"
            android:textSize="15sp"
            android:fontFamily="@font/nanum_b"
            android:textColor="@color/titleText"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background ="@color/basicLine"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/setting_question_constraint"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/setting_tempError_constraint">

        <ImageView
            android:id="@+id/setting_question_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_question"
            android:layout_alignParentBottom="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting_question_tv"/>

        <TextView
            android:id="@+id/setting_question_tv"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:text="문의"
            android:textSize="15sp"
            android:fontFamily="@font/nanum_b"
            android:textColor="@color/titleText"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background ="@color/basicLine"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>