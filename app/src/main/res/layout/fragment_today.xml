<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- actionBar -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/today_actionbar_constraint"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/actionBar">
        <TextView
            android:id="@+id/today_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:text="덕양구 화전동 ^~^"
            android:fontFamily="@font/nanum_eb"
            android:textColor="@color/titleText" />
        <ImageButton
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="12dp"
            android:background="@color/colorPrimaryDark"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/basicLine"/>
    </android.support.constraint.ConstraintLayout>
    <!-- table -->
    <HorizontalScrollView
        android:id="@+id/today_table_scroll"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/today_actionbar_constraint"
        app:layout_constraintBottom_toTopOf="@+id/today_line_view"
        android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/today_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/today_table_scroll"
        android:background="@color/basicLine"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/today_info_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/today_line_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/today_info_iv"
            android:layout_width="19dp"
            android:layout_height="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/today_info_tv"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/today_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/today_info_iv"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal"
            android:maxLines="10"
            android:textSize="15sp"
            android:textColor="@color/infoText"
            android:text="시간을 선택하면 체감 온도에 입었던\n\n과거의 착장이 나옵니다 (온도 오차 ±5)"
            android:fontFamily="@font/nanum_b"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/today_line_view">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>